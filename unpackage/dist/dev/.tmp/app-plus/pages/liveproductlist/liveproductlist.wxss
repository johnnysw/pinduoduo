
.productlist {
	width: 750rpx;
	height: 900rpx;
	position: fixed;
	bottom: 0;
}
.productlist-title {
	width: 750rpx;
	height: 80rpx;
	line-height: 80rpx;
	padding-left: 19rpx;
	font-size: 28rpx;
	color: #333333;
	border-bottom: 1rpx solid #DDDDDD;
}
.product {
	height: 820rpx;
	width: 710rpx;
	position: absolute;
	left: 20rpx
}
.product-item {
	width: 710rpx;
	height: 180rpx;
	border-bottom: 1rpx solid #DDDDDD;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.product-item:last-child{
	border-bottom: none;
}
.image-wrapper image {
	width: 140rpx;
	height: 140rpx;
	margin-top: 20rpx;
}
.image-num{
	width: 30rpx;
	height: 30rpx;
	line-height: 30rpx;
	text-align: center;
	color: #ffffff;
	font-size: 20rpx;
	background-color: #333333;
	position: absolute;
	z-index: 99;
	margin-top: 20rpx;
}
.price-box {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1
}
.title {
	width: 531rpx;
	height: 53rpx;
	font-size: 24rpx;
	font-color: #333333;
	margin-top: 29rpx;
	margin-left: 20rpx;
}
.price {
	position: absolute;
	left: 159rpx;
	margin-top: 48rpx;
	color: #ef1c00;
	font-size: 24rpx;
}
.sale {
	position: absolute;
	left: 620rpx;
	margin-top: 48rpx;
	color: #999999;
	font-size: 20rpx
}


